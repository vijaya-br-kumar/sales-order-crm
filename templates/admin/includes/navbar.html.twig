    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
            <li class="nav-item {% if app.request.attributes.get('_route') == 'admin_dashboard' %} active {% endif %}">
                <a class="nav-link" href="{{ path('admin_dashboard') }}">Dashboard</a>
            </li>
            <li class="nav-item {% if app.request.attributes.get('_route') == 'sales_order_index' %} active {% endif %}">
                <a class="nav-link" href="{{ path('sales_order_index') }}">Sales Order List</a>
            </li>
            <li class="nav-item {% if app.request.attributes.get('_route') == 'sales_order_new' %} active {% endif %}">
                <a class="nav-link" href="{{ path('sales_order_new') }}">New Sales Order</a>
            </li>
