{% set flashMessages = app.flashes %}
{% if (flashMessages | length) > 0 %}
    <div class="row">
        {% if flashMessages.success is defined %}
            <div class="offset-md-2 col-md-8 mt-5">
                {% for message in flashMessages.success %}
                    <div class="alert alert-success">
                        {{ message }}
                    </div>
                {% endfor %}
            </div>
        {% endif %}
        {% if flashMessages.error is defined %}
            <div class="offset-md-2 col-md-8 mt-5">
                {% for message in flashMessages.error %}
                    <div class="alert alert-danger">
                        {{ message }}
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
{% endif %}